    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn add-btn" href="{{ path('new_etape') }}">Ajouter une Ã©tape</a>
        <a class="btn add-btn" href="{{ path('edit_niveau', {'id': niveau.id})}}">Modifier le niveau</a>
