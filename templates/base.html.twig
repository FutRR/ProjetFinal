<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css')}}">
        {% endblock %}

    </head>
    
    <body class="{% block body_class %}{% endblock %}">
        <nav>
            <a class="logo" href="{{ path('app_home')}}"><img src="{{ asset('img/logo-white.png')}}" alt="Maesterclass logo"></a>
            <ul class="nav-links">
                <li class="nav-link"><a title="Acccueil" href="{{ path('app_home')}}">Accueil</a></li>
                <li class="nav-link"><a title="Niveaux" href="{{ path('app_niveau')}}">Niveaux</a></li>
                <div class="line"></div>
                {% if app.user %}
                    <li class="nav-link"><a title="Profil" href="{{ path('show_utilisateur', {'id': app.user.id})}}">Profil</a></li>
                    <li class="nav-link"><a title="Déconnexion" href="{{ path('app_logout')}}">Déconnexion</a></li> 
                {% else %}
                    <li class="nav-link"><a title="Inscription" href="{{ path('app_register')}}">Inscription</a></li>
                    <li class="nav-link"><a title="Connexion" href="{{ path('app_login')}}">Connexion</a></li>
                {% endif %}            
            </ul>
        </nav>

        <main>
        {% block body %}
        {% endblock %}
        </main>

        {% block javascripts %}
            {# {% block importmap %}{{ importmap('app') }}{% endblock %} #}
            <script src="https://kit.fontawesome.com/19a031a4c5.js" crossorigin="anonymous"></script>
            <script src="{{ asset('js/script.js')}}"></script>
        {% endblock %}

    </body>
</html>